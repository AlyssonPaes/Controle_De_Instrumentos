    <Button
        android:id="@+id/btGravar2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0097A7"
        android:text="Salvar Dados"
        android:textAlignment="center" />




</LinearLayout>
